@model _00_Repetition_FileUpload.Models.Forms.ProfileImageUploadForm

@{
    ViewData["Title"] = "Upload Profile Image";
}

<h4>Upload your Profile Image</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FileUpload" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
              <label asp-for="File" class="form-label"></label>
              <input asp-for="File" class="form-control" type="file">
              <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Upload Image" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
